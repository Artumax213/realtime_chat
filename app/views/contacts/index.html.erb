<div class="flex flex-col md:flex-row md:space-x-0 overflow-y-auto" style="overflow-y: hidden;">
    <div class="bg-gray-200 py-0 px-4 w-1/3 overflow-y-auto sm:h-[calc(100vh-65px)] h-[calc(75vh-65px)]" style="white-space: nowrap; text-overflow: ellipsis;">
        <div class="py-2">
            <div class="flex flex-col md:flex-row justify-between items-center py-2 ">
                <div class="text-left">
                    <h2 class="font-bold uppercase">Hello, <%= current_user.name%></h2>
                </div>
                <div class="text-right">
                    <%#= render partial: 'layouts/submenu/three_points' %>
                </div>
            </div>
            <%#= render "search/form_search" %>
        </div>

        <div class="h-auto md:h-[calc(100vh-250px)] overflow-y-auto">

            <div id="found_user">
            </div>

            <h2 class="pt-2">GROUPS</h2>
            <div id="groups">
                <%#= render @groups %>
            </div>

            <h2 class="pt-2">USERS</h2>
            <div id="users">
                <%= render @users %>
            </div>
        </div>
    </div>

    <div class="bg-gray-100 p-4 pb-2 md:col-span-1 md:w-2/3 overflow-y-auto sm:h-[calc(100vh-65px)] h-[calc(75vh-65px)]">
    </div>
</div>
